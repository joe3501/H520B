    312          /**
    313          * @brief	维护主状态机的线程
    314          */
    315          void State_Machine_thread(void *p)
    316          {
    317          	unsigned int	i,cnt,event;
    318          	unsigned char	err;
    319          	unsigned char	barcode[MAX_BARCODE_LEN+1];
    320          	unsigned char   codetype[20];
    321          	unsigned int    codelen;
    322          	int				ret,index;
    323          	unsigned int	last_state;
    324          	unsigned char	*rec;
    325          
    326          	Jfree(p_init_thread_stk);	//退出初始化线程时，释放自己的任务栈
    327          
    328          	//hw_platform_led_blink_test();		//for test
    329          	//lowpower_tip();					//for test
    330          	while(1)
    331          	{
    332          		event = (unsigned int)OSQPend(pEvent_Queue,25,&err);
    333          		if (event == 0)
    334          		{
    335          			if ((g_param.lower_power_timeout)&&(device_current_state != STATE_HID_Mode))
    336          			{
    337          				keypress_timeout++;
    338          				if (keypress_timeout == g_param.lower_power_timeout*4*60)
    339          				{
    340          					hw_platform_beep_ctrl(500,3000);
    341          					EnterLowPowerMode();
    342          					ExitLowPowerMode();
    343          				}
    344          			}
    345          			continue;
    346          		}
    347          #ifdef DEBUG_VER
    348          		printf("current state:%d\r\n",device_current_state);
    349          		printf("event:%d\r\n",event);
    350          #endif
    351          		if(device_current_state ==  STATE_BT_Mode_Disconnect)
    352          		{
    353          			switch(event)
    354          			{
    355          			case EVENT_SCAN_KEY_SINGLE_CLICK:
    356          			case EVENT_SCAN_KEY_DOUBLE_CLICK:
    357          				ret = scanner_get_barcode(barcode,MAX_BARCODE_LEN,codetype,&codelen);	//扫描条码
    358          				hw_platform_stop_led_blink(LED_GREEN);
    359          				if (ret == 0)
    360          				{
    361          					scan_barcode_ok_tip();
    362          				}
    363          
    364          				if (lowpower_state)
    365          				{
    366          					lowpower_tip();
    367          				}
    368          				//只是扫描到条码而已，什么都不做
    369          				break;
    370          			case EVENT_SCAN_KEY_LONG_PRESS:
    371          				//切换到Memory Mode
    372          				hw_platform_stop_led_blink(LED_GREEN);
    373          				exit_from_BT_Mode(0);
    374          				device_current_state = STATE_Memory_Mode;
    375          				hw_platform_beep_ctrl(300,3000);
    376          				enter_into_Memory_Mode();
    377          				break;
    378          			case EVENT_ERASE_KEY_SINGLE_CLICK:
    379          				break;
    380          			case EVENT_ERASE_KEY_LONG_PRESS:
    381          				//切换到配对模式
    382          				exit_from_BT_Mode(0);
    383          				device_current_state = STATE_BT_Mode_WaitPair;
    384          				enter_into_BT_Mode(2);
    385          				break;
    386          			case EVENT_RESET_KEY_PRESS:
    387          				break;
    388          			case EVENT_BT_CONNECTED:
    389          				//切换到蓝牙连接模式
    390          				exit_from_BT_Mode(0);
    391          				device_current_state = STATE_BT_Mode_Connect;
    392          				enter_into_BT_Mode(1);
    393          				break;
    394          			case EVENT_BT_DISCONNECTED:
    395          				break;
    396          			case EVENT_USB_CABLE_INSERT:
    397          				//切换到USB HID模式
    398          				exit_from_BT_Mode(0);
    399          				last_state = STATE_BT_Mode_Disconnect;
    400          				device_current_state = STATE_HID_Mode;
    401          				enter_into_USB_HID_Mode();
    402          				break;
    403          			case EVENT_USB_CABLE_REMOVE:
    404          				break;
    405          			case EVENT_LOW_POWER:
    406          				lowpower_tip();
    407          				break;
    408          			default:
    409          				break;
    410          			}
    411          		}
    412          		else if(device_current_state ==  STATE_BT_Mode_Connect)
    413          		{
    414          			switch(event)
    415          			{
    416          			case EVENT_SCAN_KEY_SINGLE_CLICK:
    417          				//扫描条码
    418          				ret = scanner_get_barcode(barcode,MAX_BARCODE_LEN,codetype,&codelen);
    419          				hw_platform_stop_led_blink(LED_GREEN);
    420          				if (ret != 0)
    421          				{
    422          					break;
    423          				}
    424          
    425          				scan_barcode_ok_tip();
    426          				if (lowpower_state)
    427          				{
    428          					lowpower_tip();
    429          				}
    430          				//扫描到条码了
    431          				//将获取到的条码先push到cash缓存起来，然后Post到系统的
    432          				//Queue，由蓝牙模块线程负责去发送到主机
    433          repost:
    434          				ret = OSQPost(pBarcode_Queue,(void*)push_barcode_into_cash((unsigned char*)barcode));
    435          				if(ret != OS_ERR_NONE)
    436          				{
    437          					if(ret == OS_ERR_Q_FULL || ret == OS_ERR_PEVENT_NULL)
    438          					{
    439          						//如果队列满了或者空事件时，那么需要延时重试
    440          						OSTimeDlyHMSM(0,0,0,100);
    441          						goto repost;
    442          					}
    443          					else
    444          					{
    445          						assert(0);	//系统错误
    446          					}
    447          				}
    448          				break;
    449          			case EVENT_SCAN_KEY_DOUBLE_CLICK:
    450          				if (g_param.ios_softkeypad_enable)
    451          				{
    452          					WBTD_set_ioskeypad(1);
    453          				}
    454          				break;
    455          			case EVENT_SCAN_KEY_LONG_PRESS:
    456          				hw_platform_stop_led_blink(LED_GREEN);
    457          				//切换到Memory mode
    458          				exit_from_BT_Mode(1);
    459          				device_current_state = STATE_Memory_Mode;
    460          				hw_platform_beep_ctrl(300,3000);
    461          				enter_into_Memory_Mode();
    462          				break;
    463          			case EVENT_ERASE_KEY_SINGLE_CLICK:
    464          				break;
    465          			case EVENT_ERASE_KEY_LONG_PRESS:
    466          				//进入配对模式
    467          				exit_from_BT_Mode(1);
    468          				device_current_state = STATE_BT_Mode_WaitPair;
    469          				enter_into_BT_Mode(2);
    470          				break;
    471          			case EVENT_RESET_KEY_PRESS:
    472          				//@todo...
    473          				break;
    474          			case EVENT_BT_CONNECTED:
    475          				break;
